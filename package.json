{
  "name": "matador",
  "version": "1.0.0",
  "description": "A little Remix.run route for BullMQ queues",
  "main": "index.js",
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "dev": "concurrently -p \"[{name}]\" -n \"tailwind,remix\" -c \"yellow.bold,red.bold\" \"npm:dev:css\" \"npm:dev:remix\"",
    "dev:remix": "cross-env NODE_ENV=development remix dev",
    "dev:css": "tailwindcss -o ./app/styles.css --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nullndr/Matador.git"
  },
  "keywords": [
    "bullmq",
    "remix.run",
    "matador"
  ],
  "author": "Andrea <andrea@yaaaw.it>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/nullndr/Matador/issues"
  },
  "homepage": "https://github.com/nullndr/Matador#readme",
  "dependencies": {
    "@remix-run/node": "1.4.3",
    "@remix-run/react": "1.4.3",
    "@remix-run/serve": "1.4.3",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "ioredis": "5.0.5",
    "bullmq": "1.82.2"
  },
  "devDependencies": {
    "@remix-run/dev": "1.4.3",
    "@remix-run/eslint-config": "1.4.3",
    "@types/react": "17.0.45",
    "@types/react-dom": "17.0.17",
    "eslint": "8.15.0",
    "typescript": "4.6.4",
    "@headlessui/react": "1.6.1",
    "concurrently": "7.1.0"
  }
}
